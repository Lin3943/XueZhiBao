<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_text_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zyl.xuezhibao.view_.TextLoginActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/activity_text_login_head"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/activity_text_login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="注册"
            android:textColor="#4F4F4E"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="用户登录"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/activity_login_text_top_closeL"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_text_login_top_close"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:padding="15dp"
                android:visibility="gone"
                android:src="@drawable/register_top_close" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/activity_text_login_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/logo" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/linear_text_login_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/linear_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/text_login_edit_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="请输入账号"
            android:textSize="16dp"
            android:singleLine="true"
            android:inputType="phone"
            android:textColorHint="#77787A" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/linear_text_login_editPsw"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/linear_text_login_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/linear_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/text_login_edit_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="请输入验证码"
            android:textSize="16dp"
            android:singleLine="true"
            android:digits="0123456789"
            android:inputType="text"
            android:textColorHint="#77787A" />

        <TextView
            android:text="获取验证码"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/text_code_get"
            android:textColor="#9A9B9A"
            android:gravity="center"
            android:layout_marginRight="22dp"
            android:textSize="12dp"
        />
    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/text_login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/linear_text_login_editPsw"
        android:layout_marginTop="10dp"
        android:background="@drawable/linear_wechat"
        android:text="登录"
        android:textSize="18dp"
        android:gravity="center"
        android:textColor="#34CA8D" />

    <TextView
        android:id="@+id/text_or"
        android:text="或"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_login_btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="#CAC9D1"
        android:textSize="50px"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/linear_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/text_or"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/register_btn_next"
        android:gravity="center"
        android:orientation="horizontal">

        <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/register_wechat"-->
        <!--android:layout_marginRight="5dp"-->
        <!--/>-->

        <TextView
            android:text="账号登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#6F490A"
            android:textSize="18dp"
            />



    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:scaleType="fitXY"
        android:src="@drawable/register_bg"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>

