<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <include layout="@layout/header_img_back"></include>
    <TextView
        android:id="@+id/tv_publicbenifit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16"
        android:text="公益课程"
        android:gravity="center"
        android:padding="@dimen/padding_4"
        />
    <ImageView
        android:id="@+id/img_publicbenifit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gongyi"
        android:gravity="center"
        android:padding="@dimen/padding_4"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="@dimen/padding_1"
        android:paddingRight="@dimen/padding_1"
        >

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="公益课程"
            android:background="@color/slategray"
            android:textSize="@dimen/text_size_16"
            android:textColor="#00ff00" />

        <Space
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/tv_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="公益直播间"
            android:background="@color/slategray"
            android:textSize="@dimen/text_size_16"
            android:textColor="#ffffff" />

    </LinearLayout>
    <ImageView
        android:id="@+id/img_cursor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:src="@drawable/line" />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_find_publicbenifit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />
</LinearLayout>
