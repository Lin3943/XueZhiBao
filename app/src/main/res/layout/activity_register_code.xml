<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zyl.xuezhibao.view_.RegisterCodeActivity">

    <RelativeLayout
        android:id="@+id/activity_invite_shop_head"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:id="@+id/register_top_backL"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/register_top_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="13dp"
                android:src="@drawable/register_top_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="@color/black"
            android:textSize="@dimen/title" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350px"
        android:layout_height="300px"
        android:layout_below="@+id/activity_invite_shop_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:id="@+id/linear_code"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/linear_shape"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edit_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="验证码"
            android:inputType="textPassword"
            android:textColorHint="#CBCAD0" />
        <TextView
            android:id="@+id/text_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:text="获取验证码"
            android:textColor="#A2A2A2"
            android:textSize="18dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_editPsw"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/linear_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/linear_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="密码为6-16位数字或字母"
            android:inputType="textPassword"
            android:textColorHint="#CBCAD0" />
    </LinearLayout>

    <Button
        android:id="@+id/register_btn_finish"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/linear_editPsw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/register_btn_next"
        android:text="完成注册"
        android:textColor="#6F490A" />

</RelativeLayout>
