<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="180dp"
              android:descendantFocusability="blocksDescendants"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="@dimen/padding_4"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        >

        <ImageView

            android:id="@+id/iv_school_teacher_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_luffy"
            />

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_school_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="路飞"
            android:textColor="#11f"
            android:textSize="@dimen/text_size_22"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:padding="@dimen/padding_2"
        android:paddingLeft="@dimen/padding_4"
        android:paddingRight="@dimen/padding_4"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="翔安一中"
                android:textSize="@dimen/text_size_16"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="日语教师"
                android:textSize="@dimen/text_size_16"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="@dimen/padding_2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="好评："
                android:textSize="@dimen/text_size_12"/>

            <TextView
                android:id="@+id/tv_his_course_sum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="111"
                android:textSize="@dimen/text_size_12"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_4"
                android:layout_marginRight="@dimen/padding_4"
                android:background="@color/grey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="课程："
                android:textSize="@dimen/text_size_12"/>

            <TextView
                android:id="@+id/tv_lesson_sum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="111"
                android:textSize="@dimen/text_size_12"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_4"
                android:layout_marginRight="@dimen/padding_4"
                android:background="@color/grey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="学生："
                android:textSize="@dimen/text_size_12"/>

            <TextView
                android:id="@+id/tv_student_sum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="50"
                android:textSize="@dimen/text_size_12"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
