<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_4"
    android:orientation="vertical"
    >

    <include layout="@layout/header_img_back"/>

    <LinearLayout
        android:visibility="gone"
        android:paddingBottom="@dimen/padding_20"
        android:id="@+id/llt_not_video_collection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/mine_inv"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="暂无收藏"
            android:textSize="@dimen/text_size_20"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llt_show_video_collection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_simple_tip"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="收藏视频"
            android:textSize="@dimen/text_size_14"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_video_collection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


</LinearLayout>
