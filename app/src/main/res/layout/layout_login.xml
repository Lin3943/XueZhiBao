<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_login"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              tools:context="com.zyl.xuezhibao.view_.LoginActivity">

    <RelativeLayout
        android:id="@+id/activity_invite_shop_head"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:text="注册"
            android:textColor="#4F4F4E"
            android:textSize="@dimen/text_size_18"/>

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="用户登录"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <LinearLayout
            android:id="@+id/activity_login_top_closeL"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_login_top_close"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:padding="15dp"
                android:src="@drawable/register_top_close"
                android:visibility="gone"/>

        </LinearLayout>

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/activity_invite_shop_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon_logo_blue"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />

    <LinearLayout
        android:id="@+id/linear_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/linear_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="请输入账号"
            android:inputType="phone"
            android:singleLine="true"
            android:textColorHint="#77787A"
            android:textSize="16sp"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />

    <LinearLayout
        android:id="@+id/linear_editPsw"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/linear_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/linear_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColorHint="#77787A"
            android:textSize="16sp"
            />


        <!--android:textColorHint="#CBCAD0"-->

        <!--<TextView-->
        <!--android:text="忘记密码"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/text_psw_forget"-->
        <!--android:textColor="#666666"-->
        <!--android:layout_marginRight="22dp"-->
        <!--android:textSize="16dp"-->
        <!--/>-->
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />

    <Button
        android:id="@+id/activity_login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/linear_editPsw"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_login_btn"
        android:gravity="center"
        android:text="登录"
        android:textColor="#9F490A"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/text_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_login_btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text=" 快捷登陆 "
        android:textColor="#CAC9D1"
        android:textSize="@dimen/text_size_14"/>

    <LinearLayout
        android:id="@+id/linear_text_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/text_or"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/padding_2"
            android:background="@drawable/logo_weixin_0"
            android:padding="@dimen/padding_2"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/padding_2"
            android:background="@drawable/logo_qq"
            android:padding="@dimen/padding_2"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/padding_2"
            android:background="@drawable/logo_webo"
            android:padding="@dimen/padding_2"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="1"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/register_bg"/>
</LinearLayout>
